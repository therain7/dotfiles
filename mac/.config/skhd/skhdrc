# caps lock is mapped to ralt
ralt - return : open -ga Ghostty $HOME

# disable "hide window" shortcut
cmd - h : true

ralt - h : yabai -m window --focus west
ralt - l : yabai -m window --focus east
ralt - j : yabai -m window --focus south
ralt - k : yabai -m window --focus north

ralt - w : yabai -m window --warp north || (yabai -m window --toggle split && yabai -m window --swap north)
ralt - s : yabai -m window --warp south || (yabai -m window --toggle split && yabai -m window --swap south)
ralt - a : yabai -m window --warp west || (yabai -m window --toggle split && yabai -m window --swap west)
ralt - d : yabai -m window --warp east || (yabai -m window --toggle split && yabai -m window --swap east)

ralt + lshift - h : yabai -m window --resize left:-100:0 ; yabai -m window --resize right:-100:0
ralt + lshift - j : yabai -m window --resize bottom:0:100 ; yabai -m window --resize top:0:100
ralt + lshift - k : yabai -m window --resize top:0:-100 ; yabai -m window --resize bottom:0:-100
ralt + lshift - l : yabai -m window --resize right:100:0 ; yabai -m window --resize left:100:0
ralt - i : yabai -m space --balance

ralt - 1 : yabai -m space --focus 1
ralt - 2 : yabai -m space --focus 2
ralt - 3 : yabai -m space --focus 3
ralt - 4 : yabai -m space --focus 4
ralt - 5 : yabai -m space --focus 5
ralt - 6 : yabai -m space --focus 6
ralt - 7 : yabai -m space --focus 7
ralt - 8 : yabai -m space --focus 8
ralt - 9 : yabai -m space --focus 9
ralt - 0 : yabai -m space --focus 10

ralt + lshift - 1 : yabai -m window --space 1
ralt + lshift - 2 : yabai -m window --space 2
ralt + lshift - 3 : yabai -m window --space 3
ralt + lshift - 4 : yabai -m window --space 4
ralt + lshift - 5 : yabai -m window --space 5
ralt + lshift - 6 : yabai -m window --space 6
ralt + lshift - 7 : yabai -m window --space 7
ralt + lshift - 8 : yabai -m window --space 8
ralt + lshift - 9 : yabai -m window --space 9
ralt + lshift - 0 : yabai -m window --space 10

ralt - q : yabai -m window --close
ralt + lshift - space : yabai -m window --toggle float
ralt - f : yabai -m window --toggle windowed-fullscreen

ralt - p : [[ $(yabai -m config mouse_follows_focus) = "off" ]] && yabai -m config mouse_follows_focus on || yabai -m config mouse_follows_focus off
