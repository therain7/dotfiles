[user]
    email = therain.i@yahoo.com
    name = Andrei
    signingkey = /Users/therain/.ssh/id_ed25519.pub
[init]
    defaultBranch = main
[gpg]
    format = ssh
[commit]
    gpgsign = true

[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
